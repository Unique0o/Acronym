<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/black</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="Screen_Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Screen_Heading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_10sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="simple_heading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Style_Edit_Text" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <!--font family Light-->
    <style name="text_Style_light">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--font family Normal-->
    <style name="text_style_normal">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="normal_heading">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="bold_heading">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <!--font family Bold-->
    <style name="text_Style_bold">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--font family semi_bold-->
    <style name="text_Style_semi_bold">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--font family medium-->
    <style name="text_Style_medium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--font family light-->
    <style name="text_Style_light.">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--font family light-->
    <style name="logo_font_style">
        <item name="fontFamily">@font/lora_medium</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>


    <style name="alertAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--Bottom Sheet Style-->
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>


    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

</resources>